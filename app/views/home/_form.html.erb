<%= form_tag('/page', :method => "get", id: "page-search-form") do %>
	<h2>Search All by Page Number</h2>
    <div>
        <input type="text" name="page" placeholder="Search all by page #" />
    </div>
    <%= submit_tag("Search") %>
<% end %>
